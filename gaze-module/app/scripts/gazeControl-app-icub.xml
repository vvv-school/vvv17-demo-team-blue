<application>

  <name>gazeControl App icub</name>

  <module>
      <name>gazeControl</name>
      <parameters>--robot icub</parameters>
      <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpview</name>
      <parameters>--name /viewerL --x 10 --y 10</parameters>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpview</name>
      <parameters>--name /viewerR --x 360 --y 10</parameters>
      <node>localhost</node>
  </module>

  <connection>
      <from>/location</from>
      <to>/memory/rpc</to>
      <protocol>tcp</protocol>
  </connection>

  <connection>
      <from>/calibration</from>
      <to>/iolReachingCalibration/rpc</to>
      <protocol>tcp</protocol>
  </connection>

</application>
